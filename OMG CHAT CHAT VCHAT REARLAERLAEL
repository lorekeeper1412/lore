-- LEGACY NAME COLORS
local NAME_COLORS = {
	Color3.new(253/255, 41/255, 67/255),
	Color3.new(1/255, 162/255, 255/255),
	Color3.new(2/255, 184/255, 87/255),
	BrickColor.new("Bright violet").Color,
	BrickColor.new("Bright orange").Color,
	BrickColor.new("Bright yellow").Color,
	BrickColor.new("Light reddish violet").Color,
	BrickColor.new("Brick yellow").Color,
}

local function GetNameValue(name)
	local v = 0
	for i = 1, #name do
		local c = string.byte(name, i)
		local r = #name - i + 1
		if #name % 2 == 1 then r -= 1 end
		if r % 4 >= 2 then c = -c end
		v += c
	end
	return v
end

local function ComputeNameColor(name)
	return NAME_COLORS[(GetNameValue(name) % #NAME_COLORS) + 1]
end

local function colorToHex(c)
	return string.format("%02X%02X%02X", c.R*255, c.G*255, c.B*255)
end

local function getChatColor(plr)
	if plr.Team and plr.TeamColor then
		return plr.TeamColor.Color
	end
	return ComputeNameColor(plr.Name)
end

while true do
	task.wait(math.random(4, 10))

	-- filter out LocalPlayer
	local pool = {}
	for _, plr in ipairs(Players:GetPlayers()) do
		if plr ~= LocalPlayer then
			table.insert(pool, plr)
		end
	end

	if #pool == 0 then continue end

	local talkCount = math.random(1, math.min(4, #pool))

	for i = 1, talkCount do
		local plr = pool[math.random(#pool)]
		local msg = MESSAGES[math.random(#MESSAGES)]

		task.wait(math.random(2, 8) / 10)

		if plr.Character and plr.Character:FindFirstChild("Head") then
			Chat:Chat(plr.Character.Head, msg, Enum.ChatColor.White)
		end

		local c = getChatColor(plr)
		channel:DisplaySystemMessage(
			"<font color='#"..colorToHex(c).."'>"..
			plr.Name..
			"</font>: "..msg
		)
	end
end
